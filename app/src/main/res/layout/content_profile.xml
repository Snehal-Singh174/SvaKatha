<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/app_bar_profile">

    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottom_nav">

        <fragment
            android:id="@+id/nav_host_fragment"
            android:name="androidx.navigation.fragment.NavHostFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:defaultNavHost="true"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:navGraph="@navigation/mobile_navigation" />

        <ImageView
            android:id="@+id/profilephoto"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/shape_profilephoto"
            android:layout_gravity="center_horizontal"/>

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="135dp"
            android:fontFamily="@font/segoe"
            android:text="@string/profile"
            android:textFontWeight="700"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/profession"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="170dp"
            android:text="@string/prof"
            android:layout_gravity="center_horizontal" />

        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_height="40dp"
            tools:layout_editor_absoluteX="175dp"
            tools:layout_editor_absoluteY="221dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="200dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.8dp"
            android:background="#707070"
            android:layout_marginTop="260dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"/>

        <Button
            android:id="@+id/editprofile"
            android:layout_width="120dp"
            android:layout_height="42dp"
            android:background="@drawable/editprofilbutton"
            android:text="Edit Profile"
            android:textAllCaps="false"
            android:fontFamily="@font/segoe"
            android:textColor="#ffffff"
            android:textSize="16dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="295dp"/>

        <TextView
            android:id="@+id/notification"
            android:layout_width="80dp"
            android:layout_height="60dp"
            android:layout_marginTop="285dp"
            android:layout_marginStart="300dp"
            android:drawableTop="@drawable/ic_notification_icon"
            android:lines="2"
            android:maxLines="2"
            android:text="Notification"
            android:fontFamily="@font/segoe"
            android:textColor="#000"
            android:textSize="15dp"/>

        <TextView
            android:id="@+id/connection"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="@string/eightynine"
            android:lines="3"
            android:maxLines="3"
            android:textAlignment="center"
            android:textColor="#000"
            android:textSize="15dp"
            android:layout_marginStart="18dp"
            android:fontFamily="@font/segoe"
            android:layout_marginTop="285dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.8dp"
            android:background="#707070"
            android:layout_marginTop="360dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="380dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/dropdown_background"
            android:gravity="center_vertical"
            android:text="Body Shape"
            android:fontFamily="@font/segoe"
            android:paddingLeft="10dp"
            android:textColor="#000"
            android:textSize="18sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="432dp"
            android:background="@drawable/dropdown_background"
            android:gravity="center_vertical"
            android:text="Occupation"
            android:fontFamily="@font/segoe"
            android:paddingLeft="10dp"
            android:textColor="#000"
            android:textSize="18sp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="484dp"
            android:background="@drawable/dropdown_background"
            android:gravity="center_vertical"
            android:text="Size"
            android:fontFamily="@font/segoe"
            android:paddingLeft="10dp"
            android:textColor="#000"
            android:textSize="18sp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="536dp"
            android:background="@drawable/dropdown_background"
            android:gravity="center_vertical"
            android:text="Price Range"
            android:fontFamily="@font/segoe"
            android:paddingLeft="10dp"
            android:textColor="#000"
            android:textSize="18sp"/>
    </FrameLayout>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_nav"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="#A7AAAF"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:itemIconTint="@color/colorPrimary"
        app:itemTextColor="#000"
        android:layout_alignParentBottom="true"
        app:menu="@menu/bottom_navigation_menu" />
</RelativeLayout>