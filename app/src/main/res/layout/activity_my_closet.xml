<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MyCloset">
    
    <TextView
        android:id="@+id/closet_title"
        android:layout_width="@dimen/_81sdp"
        android:layout_height="@dimen/_23sdp"
        android:text="@string/closet_title"
        android:fontFamily="@font/segoe"
        android:textColor="#000"
        android:textSize="@dimen/_16ssp"
        android:textAlignment="center"
        android:layout_marginTop="@dimen/_40sdp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ImageView
        android:id="@+id/bottom_wear"
        android:layout_width="@dimen/_100sdp"
        android:layout_height="@dimen/_165sdp"
        android:layout_marginTop="@dimen/_30sdp"
        android:layout_marginEnd="90dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/closet_title" />

    <ImageView
        android:id="@+id/top_wear"
        android:layout_width="@dimen/_60sdp"
        android:layout_height="@dimen/_60sdp"
        android:layout_marginTop="@dimen/_30sdp"
        app:layout_constraintEnd_toStartOf="@+id/bottom_wear"
        app:layout_constraintHorizontal_bias="0.91"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/closet_title" />

    <ImageView
        android:id="@+id/other_wear"
        android:layout_width="@dimen/_40sdp"
        android:layout_height="@dimen/_50sdp"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toStartOf="@+id/bottom_wear"
        app:layout_constraintHorizontal_bias="0.91"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/top_wear" />

    <ImageView
        android:id="@+id/foot_wear"
        android:layout_width="@dimen/_80sdp"
        android:layout_height="@dimen/_35sdp"
        android:layout_marginTop="@dimen/_10sdp"
        app:layout_constraintEnd_toStartOf="@+id/bottom_wear"
        app:layout_constraintHorizontal_bias="0.91"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/other_wear" />
    
    <Button
        android:id="@+id/upload_button"
        android:layout_width="@dimen/_109sdp"
        android:layout_height="@dimen/_24sdp"
        android:text="Upload your design"
        android:textSize="@dimen/_9ssp"
        android:fontFamily="@font/segoe"
        android:textAllCaps="false"
        android:textAlignment="center"
        android:textColor="#ffffff"
        android:background="@drawable/editprofilbutton"
        android:layout_marginTop="@dimen/_30sdp"
        app:layout_constraintTop_toBottomOf="@+id/bottom_wear"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <view
        android:id="@+id/separator"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1sdp"
        android:background="#707070"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_marginStart="@dimen/_5sdp"
        android:layout_marginEnd="@dimen/_5sdp"
        app:layout_constraintTop_toBottomOf="@+id/upload_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>


    <ImageView
        android:id="@+id/top_wear_1"
        android:layout_width="@dimen/_46sdp"
        android:layout_height="@dimen/_46sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_marginStart="@dimen/_15sdp"
        app:layout_constraintTop_toBottomOf="@+id/separator"
        app:layout_constraintStart_toStartOf="parent"/>

    <ImageView
        android:id="@+id/foot_wear_1"
        android:layout_width="@dimen/_44sdp"
        android:layout_height="@dimen/_30sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginStart="@dimen/_18sdp"
        app:layout_constraintTop_toBottomOf="@+id/top_wear_1"
        app:layout_constraintStart_toStartOf="parent"/>

    <ImageView
        android:id="@+id/bottom_wear_1"
        android:layout_width="@dimen/_55sdp"
        android:layout_height="@dimen/_90sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_marginStart="@dimen/_10sdp"
        app:layout_constraintTop_toBottomOf="@+id/separator"
        app:layout_constraintStart_toEndOf="@+id/top_wear_1"/>




</androidx.constraintlayout.widget.ConstraintLayout>