<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MyCloset"
    tools:visibility="visible">

    <TextView
        android:id="@+id/closet_title"
        android:layout_width="@dimen/_81sdp"
        android:layout_height="@dimen/_23sdp"
        android:layout_marginTop="@dimen/_40sdp"
        android:fontFamily="@font/segoe"
        android:text="@string/closet_title"
        android:textAlignment="center"
        android:textColor="#000"
        android:textSize="@dimen/_16ssp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/bottom_wear"
        android:layout_width="@dimen/_100sdp"
        android:layout_height="@dimen/_165sdp"
        android:layout_marginTop="@dimen/_30sdp"
        android:layout_marginEnd="90dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/closet_title" />

    <ImageView
        android:id="@+id/top_wear"
        android:layout_width="@dimen/_60sdp"
        android:layout_height="@dimen/_60sdp"
        android:layout_marginTop="@dimen/_30sdp"
        app:layout_constraintEnd_toStartOf="@+id/bottom_wear"
        app:layout_constraintHorizontal_bias="0.91"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/closet_title" />

    <ImageView
        android:id="@+id/other_wear"
        android:layout_width="@dimen/_40sdp"
        android:layout_height="@dimen/_50sdp"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toStartOf="@+id/bottom_wear"
        app:layout_constraintHorizontal_bias="0.91"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/top_wear" />

    <ImageView
        android:id="@+id/foot_wear"
        android:layout_width="@dimen/_80sdp"
        android:layout_height="@dimen/_35sdp"
        android:layout_marginTop="@dimen/_10sdp"
        app:layout_constraintEnd_toStartOf="@+id/bottom_wear"
        app:layout_constraintHorizontal_bias="0.91"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/other_wear" />

    <Button
        android:id="@+id/upload_button"
        android:layout_width="@dimen/_109sdp"
        android:layout_height="@dimen/_24sdp"
        android:layout_marginTop="@dimen/_30sdp"
        android:background="@drawable/editprofilbutton"
        android:fontFamily="@font/segoe"
        android:text="Upload your design"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="#ffffff"
        android:textSize="@dimen/_9ssp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bottom_wear" />

    <TextView
        android:id="@+id/separator"
        style="?android:attr/listSeparatorTextViewStyle"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1sdp"
        android:layout_marginStart="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_marginEnd="@dimen/_5sdp"
        android:background="#707070"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/upload_button"/>


    <ImageView
        android:id="@+id/top_wear_1"
        android:layout_width="@dimen/_46sdp"
        android:layout_height="@dimen/_46sdp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/separator" />

    <ImageView
        android:id="@+id/foot_wear_1"
        android:layout_width="@dimen/_44sdp"
        android:layout_height="@dimen/_30sdp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="6dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/top_wear_1" />

    <ImageView
        android:id="@+id/bottom_wear_1"
        android:layout_width="@dimen/_55sdp"
        android:layout_height="@dimen/_90sdp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toEndOf="@+id/top_wear_1"
        app:layout_constraintTop_toBottomOf="@+id/separator" />

    <ImageView
        android:id="@+id/top_wear_2"
        android:layout_width="@dimen/_46sdp"
        android:layout_height="@dimen/_46sdp"
        android:layout_marginStart="164dp"
        android:layout_marginTop="130dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/separator" />

    <ImageView
        android:id="@+id/foot_wear_2"
        android:layout_width="@dimen/_44sdp"
        android:layout_height="@dimen/_30sdp"
        android:layout_marginStart="168dp"
        android:layout_marginTop="6dp"
        android:visibility="visible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/top_wear_2" />

    <ImageView
        android:id="@+id/bottom_wear_2"
        android:layout_width="@dimen/_55sdp"
        android:layout_height="@dimen/_90sdp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="130dp"
        android:visibility="visible"
        app:layout_constraintStart_toEndOf="@+id/top_wear_2"
        app:layout_constraintTop_toBottomOf="@+id/separator" />

    <ImageView
        android:id="@+id/top_wear_3"
        android:layout_width="@dimen/_46sdp"
        android:layout_height="@dimen/_46sdp"
        android:layout_marginTop="20dp"
        android:visibility="visible"
        android:layout_marginEnd="@dimen/_5sdp"
        app:layout_constraintTop_toBottomOf="@+id/separator"
        app:layout_constraintEnd_toStartOf="@+id/bottom_wear_3"
        tools:layout_editor_absoluteX="262dp" />

    <ImageView
        android:id="@+id/bottom_wear_3"
        android:layout_width="@dimen/_55sdp"
        android:layout_height="@dimen/_90sdp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:visibility="visible"
        android:layout_marginEnd="@dimen/_10sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/separator" />

    <ImageView
        android:id="@+id/foot_wear_3"
        android:layout_width="@dimen/_44sdp"
        android:layout_height="@dimen/_30sdp"
        android:layout_marginTop="6dp"
        android:visibility="visible"
        android:layout_marginEnd="@dimen/_5sdp"
        app:layout_constraintTop_toBottomOf="@+id/top_wear_3"
        app:layout_constraintEnd_toStartOf="@+id/bottom_wear_3"
        tools:layout_editor_absoluteX="265dp" />

    <TextView
        android:id="@+id/closet_occupation"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_32sdp"
        android:layout_marginStart="@dimen/_15sdp"
        android:layout_marginEnd="@dimen/_15sdp"
        android:background="@drawable/dropdown_background"
        android:gravity="center_vertical"
        android:text="Occasion"
        android:fontFamily="@font/segoe"
        android:paddingLeft="@dimen/_8sdp"
        android:textColor="#000"
        android:textSize="@dimen/_14ssp"
        app:layout_constraintTop_toBottomOf="@+id/bottom_wear_2"/>

    <Spinner
        android:id="@+id/spinner2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_25sdp"
        android:layout_marginStart="@dimen/_190sdp"
        android:layout_marginEnd="@dimen/_19sdp"
        android:layout_marginTop="@dimen/_4sdp"
        android:background="@drawable/spinnerbackground"
        android:textAlignment="center"
        android:fontFamily="@font/segoe"
        android:textColor="@color/colorPrimary"
        app:layout_constraintTop_toBottomOf="@+id/bottom_wear_2"/>

</androidx.constraintlayout.widget.ConstraintLayout>